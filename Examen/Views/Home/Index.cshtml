@model Examen.ViewModel.StudentCourseViewModel



@{
    ViewBag.Title = "Home Page";
}

<h2>WELCOME </h2>
<br />
<div class="alert alert-danger">
    <strong>READ!</strong> BEFORE START YOUR TEST TYPE YOUR CLASS AND SELECT YOUR SUBJECT
</div>


@using (Html.BeginForm("Index", "Home"))
{

        <div class="form-group">
            @Html.LabelFor(m => m.Class)
            @Html.TextBoxFor(m => m.Class, new { @class = "form-control col-md-12" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.QuizCode)
            @Html.TextBoxFor(m => m.QuizCode, new { @class = "form-control col-md-12" })
        </div>


        <button type="submit" class="btn btn-primary ">START QUIZ</button>



}

