@model Examen.ViewModel.QuizInformationViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Quiz"))
{
    <p class="alert alert-info">All the fields are required ,if is there more then one answer separate it with a comma.</p>
    <div class="form-group">
        @Html.LabelFor(m => m.CourseId)
        @Html.DropDownListFor(m => m.CourseId, new SelectList(Model.Courses, "CourseId", "CourseName"), "", new { @class = "form-control " })
        @Html.ValidationMessageFor(m => m.CourseId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.QuizName)
        @Html.TextBoxFor(m => m.QuizName, new { @class = "form-control col-md-12" })
    </div>
    <button type="submit" class="btn btn-primary ">CONTINUE</button>
}


